<odoo>
    <data>
        <record id="car_image.form_car_image_view" model="ir.ui.view">
            <field name="name">taller car Image form</field>
            <field name="model">taller.car</field>
            <field name="inherit_id" ref="taller.form_car_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group>
                        <field name="image" widget="image" class="oe_avatar" nolabel="1"/>
                    </group>

                </xpath>

            </field>
        </record>

    </data>
</odoo>