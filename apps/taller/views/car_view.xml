<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="taller.list_car_view">
            <field name="name">taller car list</field>
            <field name="model">taller.car</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="country_id"/>
                    <field name="brand"/>
                    <field name="name"/>
                    <field name="registration"/>
                    <field name="date_car"/>
                    <field name="km" optional="hide"/>
                    <field name="cylinder"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="taller.form_car_view">
            <field name="name">taller car form</field>
            <field name="model">taller.car</field>
            <field name="arch" type="xml">
                <form string="Car Form">
                    <sheet>
                        <group>
                            <field name="customer_id"/>
                            <field name="country_id"/>
                        </group>
                        <group>
                            <field name="brand"/>
                            <field name="name"/>
                            <field name="registration"/>
                            <field name="date_car"/>
                            <field name="km" optional="hide"/>
                            <field name="cylinder"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="taller.action_window_car">
            <field name="name">Car</field>
            <field name="res_model">taller.car</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Taller"
                  web_icon="taller,static/description/icon.png"
                  id="taller.menu_root"/>

        <!-- menu categories -->
        <menuitem name="Cars" id="taller.cat_menu_car" parent="taller.menu_root"/>

        <!-- actions -->
        <menuitem name="Cars" id="taller.action_menu_car" parent="taller.cat_menu_car"
                  action="taller.action_window_car"/>

    </data>
</odoo>